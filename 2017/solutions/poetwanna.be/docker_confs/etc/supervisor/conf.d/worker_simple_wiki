[program:worker_simple_wiki]
command=env C_FORCE_ROOT=True celery worker -c 1 --autoscale=1,1 -A async -Ofair  -n worker_simple_wiki@%%h
autostart=true
autorestart=true
user=root
stdout_logfile=/var/log/worker_simple_wiki_stdout.log
stderr_logfile=/var/log/worker_simple_wiki_stderr.log
directory=/qa_nips/chatbot
numprocs=1
startsecs=10
stopwaitsecs = 600
stopasgroup=true
; Set Celery priority higher than default (999)
; so, if redis is supervised, it will start first.
priority=1000
